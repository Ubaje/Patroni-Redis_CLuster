FROM postgres:17

# Set environment variables
ENV PATRONI_VERSION=4.0.4

# Switch to root to install packages
USER root

# Install Python and dependencies for Patroni
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    python3-dev \
    build-essential \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create Python virtual environment and install Patroni
RUN python3 -m venv /opt/patroni \
    && /opt/patroni/bin/pip install --upgrade pip \
    && /opt/patroni/bin/pip install patroni[consul]==$PATRONI_VERSION \
    && /opt/patroni/bin/pip install psycopg2-binary

# Create necessary directories with proper permissions
RUN mkdir -p /etc/patroni /var/lib/postgresql/data && \
    chown postgres:postgres /etc/patroni && \
    chown postgres:postgres /var/lib/postgresql/data && \
    chmod 700 /var/lib/postgresql/data

# Create an archive directory for WAL files
RUN mkdir -p /var/lib/postgresql/data/archive && \
    chown postgres:postgres /var/lib/postgresql/data/archive && \
    chmod 700 /var/lib/postgresql/data/archive

# Set PATH to include Patroni
ENV PATH="/opt/patroni/bin:$PATH"

# Switch back to postgres user
USER postgres

# Run Patroni
CMD ["/opt/patroni/bin/patroni", "/etc/patroni/patroni.yml"]